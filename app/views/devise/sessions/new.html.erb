<div class="container">
  <div class="row justify-content-center">
    <div class="col-12 col-lg-4">
      <h4 class="my-4">Connexion à votre compte</h4>
      <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="form-inputs">
          <%= f.input :email, label: "E-mail",
                  required: false,
                  autofocus: true,
                  input_html: { autocomplete: "email" } %>
          <%= f.input :password, label: "Mot de passe",
                  required: false,
                  input_html: { autocomplete: "current-password" } %>
          <%= f.input :remember_me, label: "Rester connecté", as: :boolean if devise_mapping.rememberable? %>
        </div>
        <div class="form-actions">
          <%= f.button :submit, "Se connecter", class: "btn btn-primary btn-block" %>
        </div>
      <% end %>
      <div class="mt-4">
        <%= link_to "Mot de passe oublié ?", new_password_path(resource_name) %>
        <p class="mt-2">Nouveau sur Very Good Trip ?
          <%= link_to "Créer un compte", new_registration_path(resource_name)%>
        </p>
      </div>
    </div>
  </div>
</div>
