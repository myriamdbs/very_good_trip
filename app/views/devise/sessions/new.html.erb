
<div class="container">
  <h4 style="margin-top: 15px"> < Connexion à votre compte</h4>

    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="form-inputs">
      <%= f.input :email, label: "E-mail",
                  required: false,
                  autofocus: true,
                  input_html: { autocomplete: "email" } %>
      <%= f.input :password, label: "Mot de passe",
                  required: false,
                  input_html: { autocomplete: "current-password" } %>
      <div style="display: flex; justify-content: space-between; align-items: center">
        <div>
          <%= f.input :remember_me, label: "Rester connecter", as: :boolean if devise_mapping.rememberable? %>
        </div>
        <div style="margin-bottom: 16px">
          <%= link_to "Mot de passe oublié?", new_password_path(resource_name) %>
        </div>
      </div>
      
    </div>

    <div class="form-actions">
      <%= f.button :submit, "SE CONNECTER", class: "btn btn-primary btn-block" %>
    </div>
    <% end %>
    <div class="devise-sign-up">
      <%= link_to "Créer un compte", new_registration_path(resource_name), class: "sign-up-style" %>
    </div>
      

</div>
