<div class="container">
  <h1>Mes anciennes valises</h1>
  <div class="row">
  <% @suitcases.each do |suitcase|%>
    <div class="col-sm-12 col-xs-12 col-md-4 col-lg-4">
      <div class="card">
        <img src="https://freesvg.org/img/Tiled%20Wave%20Pattern.png" class="card-img-top" alt="...">
        <div class="card-body">
          <h3 class="card-title"><%= suitcase.name %></h3>
          <h6 class="card-title"><strong>Ma valise pour</strong> <%= suitcase.destination %></h6>
          <%= link_to "Accéder à ma valise", suitcase_path(suitcase)  %>
        </div>
      </div>
      <br>
    </div>
  <% end %>
  </div>

  <% if policy(Suitcase).create? %>
    <%= link_to "Créer une nouvelle valise", new_suitcase_path, class: "btn btn-primary"  %>
  <% end %>
</div>

<%= cl_image_tag("https://res.cloudinary.com/dhhkwopvg/image/upload/v1590588793/waves_vacation_omfcsd.png",
      width: 400, height: 300, crop: :fill) %>

