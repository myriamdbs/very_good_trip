<div style="position: fixed; bottom: 35px; right:30px; z-index: 2">
  <%= link_to '<i class="fas fa-plus-circle"></i>'.html_safe, new_suitcase_item_path(@suitcase) %>
</div>




<div class="container">
  <% if @suitcase.photo.attached? %>
    <div style=" display:flex; align-items: center; padding-top: 15px">
      <div class="show-avatar" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%= cl_image_path @suitcase.photo.key %>)"></div>
      <div style="margin-left: 15px"><h3><%= @suitcase.name %></h3></div>
    </div>
    <div><strong><%= @suitcase.destination %></strong></h6></div>
  <% else %>
    <div style=" display:flex; align-items: center">  
      <div class="show-avatar" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%= cl_image_path("waves_vacation_omfcsd.png") %>)"></div>
      <div style="margin-left: 15px"><h3><%= @suitcase.name %></h3></div>    
    </div>
    <div><strong><%= @suitcase.destination %></strong></h6></div>
  <% end %>
</div>
<br>
<div class="container">
  <div class="row" >
    <div class="col-12" style="display: flex; justify-content: center; align-items: center">
      <div>
        <%= link_to "Emballés", suitcase_path(@suitcase, filter: @checked ? "" : :checked), class: "py-1 px-2 mr-2 #{params[:filter] == "checked" ? "btn-checked" : "btn-ghost"}" %>
        <%= link_to "Pas emballés", suitcase_path(@suitcase, filter: @unchecked ? "" : :unchecked), class: "py-1 px-2 mr-2 #{params[:filter] == "unchecked" ? "btn-checked" : "btn-ghost"}" %>
        <%= link_to "Partagés", suitcase_path(@suitcase, filter: @shared ? "" : :shared), class: "py-1 px-2 mr-2 #{params[:filter] == "shared" ? "btn-checked" : "btn-ghost"}" %>
      </div>
    </div>
  </div>
  <br>
  <div class="row">
    <div class="col-12">
      <% @items.each do |item| %>
      <div class="item-wrap">
        
          <div class="item-packed" style="display:flex; align-items:center">
            <%if item.packed %>
              <% cta = '<i class="fas fa-check-circle"></i>'.html_safe %>
            <% else %>
              <% cta = '<i class="far fa-circle"></i>'.html_safe %>
            <% end %>
            <%= link_to cta, item_tick_path(item), method: :patch, remote: true %>
            <strong><span style="color: white;">o</span><%= item.name.capitalize %></strong>
          </div>
        
        <%# class="item-name" %>
        <div class="item-remove">
          <%= link_to image_tag("rubbish.png", class: "remove-picture"), item_path(item), method: :delete, data: { confirm: "Are you sure?" } %>
        </div>
      </div>
      <% end %>
    </div>
  </div>
  
</div>
